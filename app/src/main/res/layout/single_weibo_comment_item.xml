<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_comment_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/iv_user_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/icon"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cv_image"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/cv_image"
        android:text="发生地方"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tv_created_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cv_image"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/cv_image"
        android:text="2016-10-10"
        android:textColor="@color/secondary_text"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_created_at"
        android:text="额范围广热管皇太后"
        android:textColor="@color/primary_text"
        android:layout_alignStart="@+id/tv_created_at"
        android:layout_marginTop="8dp"
        />
</RelativeLayout>